            "REGISTRATION FEES",
            "COMMENTS",
            "Patient file"
        ],
        "otherInvestigationsMap": {},
        "allowConsultationWhenNoOpenVisit": false,
        "defaultVisitType": "OPD",
        "visitTypeForRetrospectiveEntries": "OPD",
        "maxConceptSetLevels": 5,
        "allowOnlyCodedDiagnosis": false,
        "adtNavigationConfig": {
            "privilege": "",
            "forwardUrl": "../bedmanagement/#/bedManagement/patient/{{ '{{' }}patientUuid{{ '}}' }}",
            "title": "Go to IPD dashboard"
        },
        "conceptSetUI": {
            "Chief Complaint Data": {
                "autocomplete": true,
                "codedConceptName": "Chief Complaint",
                "nonCodedConceptName": "Non-Coded Chief Complaint",
                "durationRequired": false,
                "allowAddMore": true
            },
{% for wound_number in wound_numbers %}
