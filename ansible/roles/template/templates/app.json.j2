                "isTabular": true
            },
            "forms.follow_up.woundSpecific.size{{ wound_number }}": {
                "isTabular": true
            },
{% endfor %}
            "forms.triage.tews.mobility": {
                "isTabular": true
            },
            "forms.triage.tews.respiratory_rate": {
                "isTabular": true
            },
            "forms.triage.tews.heart_rate": {
                "isTabular": true
            },
            "forms.triage.tews.systolic_BP": {
                "isTabular": true
            },
            "forms.triage.tews.temperature": {
                "isTabular": true
            },
            "forms.triage.tews.avpu": {
                "isTabular": true
            },
            "forms.triage.tews.trauma": {
                "isTabular": true
            },
            "clinical.medication": {
                "multiSelect": true
            },
            "clinical.pain.characteristic": {
                "multiSelect": true
            },
            "clinical.pain.treatment": {
                "multiSelect": true
            },
            "clinical.psychosocialFactors": {
                "multiSelect": true
            },
            "clinical.comorbidities": {
                "multiSelect": true
            },
            "clinical.increasedInfectionRisk": {
                "multiSelect": true
            },
            "clinical.woundSpecific": {
                "multiSelect": true
            },
