{
  "id": "bahmni.appointments",
  "description": "Bahmni Appointments Scheduling App",
  "extensionPoints": [
    {
      "id": "org.bahmni.appointments",
      "description": "Bahmni Admin Page"
    }
  ],
  "config": {
    "minCharLengthToTriggerPatientSearch": 3,
    "enableSpecialities": false,
    "startOfWeek": 7,
    "weekStart": "isoWeek",
    "calendarSlotDuration": "00:05:00",
    "calendarSlotLabelInterval": "00:30:00",
    "startOfDay":"07:00",
    "endOfDay":"17:00",
    "printListViewTemplateUrl": "/bahmni_config/openmrs/apps/appointments/printListView.html",
    "enableServiceTypes": false,
    "enableCalendarView": false,
    "isServiceOnAppointmentEditable": false,
    "colorsForAppointmentService": [
      "#006400",
      "#DC143C",
      "#00008B",
      "#3F51B5",
      "#B8860B",
      "#A9A9A9",
      "#BDB76B",
      "#8B008B",
      "#556B2F",
      "#FF8C00",
      "#9932CC",
      "#8B0000",
      "#8FBC8F",
      "#483D8B",
      "#2F4F4F",
      "#3E2723",
      "#00CED1",
      "#9400D3",
      "#FF1493",
      "#00BFFF",
      "#FFFF00",
      "#FF8C00",
      "#0000FF",
      "#008000",
      "#FFC0CB"
    ],
    "allowedActions": ["Scheduled", "CheckedIn", "Completed", "Missed", "Cancelled"],
    "allowedActionsByStatus": {
      "Scheduled": ["CheckedIn", "Missed", "Cancelled"],
      "CheckedIn": ["Scheduled", "Completed", "Missed", "Cancelled"],
      "Completed": ["Scheduled", "CheckedIn", "Missed", "Cancelled"]
    },
    "colorsForListView": {
      "Missed": "#fceab6",
      "Cancelled": "#fcb6b6"
    }
  }
}


